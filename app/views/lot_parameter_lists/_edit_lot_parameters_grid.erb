<% i = 0 %>
<div id="lot_parameters_grid">
  <table id="tabledata">
    <thead>
      <tr>
        <th>Caracter√≠stica<span class="order_arrow"></span></th>
        <th>Valor<span class="order_arrow"></span></th>
        <th>Nuevo valor<span class="order_arrow"></span></th>
        <th class="actions_medium">Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @lot_parameter_list.lot_parameters.each do |p| %>
        <% class_row, i = alternate_row_class(i) %>
        <tr class="<%= class_row %>">
          <%= form_for :lot_parameter, :url=>lot_parameter_list_lot_parameter_path(@lot_parameter_list, p), :html=>{:method=>:put, :id=>'lot_parameter_edit_form_' + p.id.to_s} do |f| %>
            <td>
              <%=h p.lot_parameter_type.name %>
            </td>
            <td class="center"><%=h p.value %></td>
            <td class="center"><%= f.text_field :value, :size=>4 %></td>
            <td><%= submit_tag 'Actualizar' %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
    </tfoot>
  </table>
</div>
