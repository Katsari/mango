<% i = 0 %>
<% if @roles.length > 0 %>
<table id="tabledata">
    <thead>
      <tr>
        <th>Nombre<span class="order_arrow"></span></th>
        <th>Descripci√≥n<span class="order_arrow"></span></th>
        <th class="actions">Acciones</th></th>
      </tr>
    </thead>
    <tbody>
    <% @roles.each do |u| %>
      <% class_row, i = alternate_row_class(i) %>
      <tr class="<%= class_row %>">
        <td><%=h u.name %></td>
        <td><%=h u.description %></td>
        <td>
          Clonar
          <%= render_action_edit(edit_role_path(u)) %>
          <%= render_action_delete(role_path(u), "Desea borrar el rol '#{u.name}'?") %>
        </td>
      </tr>
    <% end %>
    </tbody>
</table>
<div id="tablefooter">
  <div id="pagination">
    <%=raw show_pagination @roles %>
  </div>
</div>
<% else %>
<p>No hay roles registrados</p>
<% end %>
