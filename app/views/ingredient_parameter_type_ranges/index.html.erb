<% title "Rango de caracteristicas por materia prima" %>
<% i = 0 %>
<% if @ingredients.length > 0 %>
<table id="tabledata">
    <thead>
      <tr>
        <th>CÃ³digo<span class="order_arrow"></span></th>
        <th>Nombre<span class="order_arrow"></span></th>
        <th class="actions_small">Acciones</th></th>
      </tr>
    </thead>
    <tbody>
    <% @ingredients.each do |ing| %>
      <% class_row, i = alternate_row_class(i) %>
      <tr class="<%= class_row %>">
        <td><%=h ing.code %></td>
        <td><%=h ing.name %></td>
        <td class="center">
          <% if ing.ingredient_parameter_type_ranges.any? %>
            <%= render_action_show(ingredient_parameter_type_range_path(ing)) %>
            <%= render_action_edit(edit_ingredient_parameter_type_range_path(ing)) %>
          <% else %>
            <%= render_action_create(create_ingredient_parameter_type_range_path(ing), "Desea definir rangos para '#{ing.name}'?") %>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
</table>
<div id="tablefooter">
  <div id="pagination">
    <%=raw show_pagination @ingredients %>
  </div>
</div>
<% else %>
<p>No hay ingredientes registrados</p>
<% end %>
