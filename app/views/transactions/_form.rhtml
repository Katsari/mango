<%= javascript_include_tag "lots" %>
<%= render_error_messages(f.error_messages) %>
<label for="transaction_type_id" class="small">Tipo:</label>
<div class="field"><%= f.collection_select :transaction_type_id, @transaction_types, :id, :code, {:include_blank => false}, :class=>'chzn-select chzn-field-normal' %> <span>*</span></div>
<label class="small"></label>
<div class="field">
  <%= radio_button_tag 'content_type', 'ingredient', checked = true %> Materia Prima
  <%= radio_button_tag 'content_type', 'product' %> Producto Terminado
</div>
<div id="lot">
  <label for="lot_id" class="small">Lote:</label>
  <div class="field"><%= f.collection_select :lot_id, @lots, :id, :to_collection_select, {:include_blank => true}, :class=>'chzn-select chzn-field-normal' %><span>*</span></div>
</div>
<div id="product_lot">
<label for="product_lot_id" class="small">Lote:</label>
<div class="field"><%= f.collection_select :product_lot_id, @products_lots, :id, :to_collection_select, {:include_blank => true}, :class=>'chzn-select chzn-field-normal' %><span>*</span></div>
</div>
<label for="client_id" class="small">Cliente:</label>
<div class="field"><%= f.collection_select :client_id, @clients, :id, :to_collection_select, {:include_blank => true}, :class=>'chzn-select chzn-field-normal' %></div>
<label for="amount" class="small">Cantidad:</label>
<div class="field"><%= f.text_field :amount, :size=>'15' %> <span>*</span></div>
<label for="document_number" class="small">Nro de doc.:</label>
<div class="field"><%= f.text_field :document_number, :size=>'20' %> <span>*</span></div>
<label for="comment" class="small">Comentario:</label>
<div class="field"><%= f.text_field :comment, :size=>'50' %></div>
<div class="clearfix"></div>
<br/><span class="required">* Campos obligatorios</span>
