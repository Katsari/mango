<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
      "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-type" content="text/html; charset=UTF-8" />
    <title>Mango</title>
    <%= favicon_link_tag 'favicon.ico' %>
    <%= stylesheet_link_tag 'reset-min' %>
    <%= stylesheet_link_tag 'grids-min' %>
    <%= stylesheet_link_tag 'common' %>
    <%= stylesheet_link_tag 'notice' %>
    <%= stylesheet_link_tag 'modal' %>
    <%= stylesheet_link_tag 'application' %>
    <%= stylesheet_link_tag 'scales' %>
    <%= stylesheet_link_tag 'tables' %>
    <%= stylesheet_link_tag 'pagination' %>
    <%= stylesheet_link_tag 'forms' %>
    <%= stylesheet_link_tag 'errors' %>
    <%= stylesheet_link_tag 'ingredients' %>
    <%= stylesheet_link_tag 'chosen' %>
    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag 'chosen.proto' %>
    <%= calendar_date_select_includes :locale => "es" %> 
    <%= csrf_meta_tag %>
</head>
<body id="application">
    <div class="wrapper">
        <!-- Header -->
        <%= render :partial => 'common/header' %>

        <!-- Notifications -->
        <%= render_flash_notice %>

        <!-- Menu -->
        <%= render_menu %>

        <!-- Content -->
        <div id="content">
            <div id="inner-content">
                <%= yield %>
            </div>
        </div>

        <!-- Footer -->
        <%= render :partial => 'common/footer' %>
    </div>
</body>
</html>
