<% title "Detalle de receta" %>
<%= form_for :recipe do |f| %>
<label for="code" class="small">Código:</label>
<div class="field"><%=h @recipe.code %></div>
<label for="name" class="small">Nombre:</label>
<div class="field"><%=h @recipe.name %></div>
<label for="version" class="small">Versión:</label>
<div class="field"><%=h @recipe.version %></div>
<label for="total" class="small">Total:</label>
<div class="field"><%=h @recipe.get_total() %> Kg</div>
<label for="comment" class="small">Comentario:</label>
<div class="field"><%=h @recipe.comment %></div>
<label for="active" class="small">En uso:</label>
<div class="field"><%=h @recipe.in_use ? "Sí" : "No"%></div>
<label for="active" class="small">Activa:</label>
<div class="field"><%=h @recipe.active ? "Sí" : "No"%></div>
<div class="clearfix"></div>
<% end %>
<h5>Ingredientes</h5>
<%= render :partial=>'show_grid', :locals =>{:recipe => @recipe} %>
<% if @parameter_list %>
  <h5>Parámetros</h5>
  <%= render :partial=>'show_parameters_grid', :locals =>{:parameter_list => @parameter_list} %>
<% end %>
